#!/bin/bash

# Following environmental variables must be set prior to running formHost.sh
NAK_SOLUTION_RELEASE_HANELLY=3.0.0
NAK_INSTALLATION_TYPE=X-SmallMonitored
NAK_DOCKER_ID=<docker_userid>
NAK_DOCKER_PW=<docker_password>

# ftp the *.nakisa.cloud private key into ~/ so that the installation script can find it and move it to the correct location later
ls -la ~/               # ensure cert.key is present
 
# run Nakisa installer for Hanelly 3.0.x builds
wget -O - https://raw.githubusercontent.com/NakisaInc/docker/Hanelly-3.0/formHost.sh > ~/formHost.sh; . ~/formHost.sh
 
