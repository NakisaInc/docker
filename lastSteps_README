# launch docker stack
cd /nakisa/app/hanelly; sudo docker stack deploy -c ds-Hanelly-${NAK_SOLUTION_RELEASE_HANELLY}-${NAK_INSTALLATION_TYPE}.yml NHAN
 
# confirm all containers have launched
sudo docker ps

######################################## USEFUL DOCKER COMMANDS ########################################

# show stack
sudo docker stack ps NHAN
sudo docker stack services NHAN

# log into docker container, look at docker logs
sudo docker exec -it <container stack qualified name> NHAN
sudo docker logs <container name> -f

# stack remove and deploy
sudo docker stack rm NHAN
sudo docker stack deploy -c <stack yml file> NHAN

# volumes
sudo docker volume ls
sudo docker volume prune
sudo docker volume rm NHAN_hanelly-data

# retart docker services - to enable cleanup of dangling resources
sudo docker service stop
sudo docker service start

# trigger Apache redirect to maintenance page and remove trigger
sudo touch /nakisa/app-volumes/apache-www/maintenance.enable
sudo rm /nakisa/app-volumes/apache-www/maintenance.enable